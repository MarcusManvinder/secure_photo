<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" parent="android:Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/ic_up</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
        <item name="android:actionBarStyle">@style/Widget.SP.ActionBar</item>
    </style>

    <style name="Theme.SP.Base" parent="Theme">

        <item name="grey_shade">@color/light_gray</item>
        <item name="default_inset_color">@color/primary_dark_60</item>
    </style>

    <style name="Theme.SP" parent="Theme.SP.Base">

        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="Theme.SP.NoActionBar" parent="Theme.SP">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.SP.Start" parent="Theme.SP.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_start</item>
    </style>

    <style name="Theme.SP.Settings" parent="Theme.SP.Base">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:actionBarStyle">@style/Widget.SP.ActionBar.HomeAndTitle</item>
    </style>

    <style name="Theme.SP.Detail">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>