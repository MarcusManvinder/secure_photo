<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SP.Base" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.SP" parent="Theme.SP.Base">
        <item name="android:actionBarStyle">@style/Widget.SP.ActionBar</item>

        <item name="grey_shade">@color/light_gray</item>
        <item name="default_inset_color">@color/primary_dark_60</item>

    </style>

    <style name="Theme.SP.NoActionBar" parent="Theme.SP">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.SP.Start" parent="Theme.SP.NoActionBar">
        <item name="android:windowBackground">@color/primary_light</item>
    </style>
</resources>