<?xml version="1.0" encoding="utf-8"?>
<com.sckftr.android.app.view.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/column_width"
    android:layout_height="@dimen/column_width"
    android:padding="@dimen/unit.5">

    <by.mcreader.imageloader.view.RecyclingImageView
        android:id="@+id/image_view_grid"
        android:layout_width="@dimen/column_width"
        android:layout_height="@dimen/column_width"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@android:id/progress"
        android:layout_width="@dimen/unit"
        android:layout_height="@dimen/unit"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/unit3" />

</com.sckftr.android.app.view.CheckableRelativeLayout>