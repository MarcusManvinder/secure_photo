<?xml version="1.0" encoding="utf-8"?>
<com.sckftr.android.app.view.ForegroundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/column_width"
    android:foreground="?android:attr/selectableItemBackground"
    app:checkedDrawable="@drawable/bg_checkable_item">

    <by.mcreader.imageloader.view.RecyclingImageView
        android:id="@+id/image_view_grid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/column_width"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"/>

</com.sckftr.android.app.view.ForegroundLinearLayout>